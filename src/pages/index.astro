import Nav from "@/components/Nav.astro";
import Layout from "@/layouts/Layout.astro";

import umbrella from "@/assets/fontawesome/umbrella.svg?raw";
import arrowRight from "@/assets/fontawesome/arrow-right.svg?raw";
---

<Layout title="Home">
  <Nav />
  <div class="fixed inset-0 grid place-items-center">
    <div>
      <div class="flex gap-2">
        <div set:html={umbrella} class="size-32 fill-current sm:size-48 md:size-56 lg:size-64" />
        <div class="grid text-6xl font-bold leading-[0.9] tracking-tight sm:text-7xl md:text-8xl lg:text-9xl">
          <h1>Meteo</h1>
          <h1 class="flex"><p class="text-accent">N</p><p class="text-primary">O</p><p class="text-secondary">W</p></h1>
        </div>
      </div>
      <h1 class="text-center text-lg font-bold sm:text-xl md:text-2xl">Powerful Weather App</h1>
    </div>
    <a href="/Weather" class="btn btn-accent">
      Begin your journey.
      <div set:html={arrowRight} class="size-4 fill-current" />
    </a>
  </div>
</Layout>
